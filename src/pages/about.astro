---
import Layout from '../layouts/Layout.astro';

const teamMembers = [
  {
    name: 'Sarah Johnson',
    role: 'Lead Developer',
    image: 'https://picsum.photos/seed/sarah/200',
    bio: 'Full-stack developer with 8 years of experience in web technologies.'
  },
  {
    name: 'Michael Chen',
    role: 'Technical Writer',
    image: 'https://picsum.photos/seed/michael/200',
    bio: 'Professional technical writer passionate about making complex topics accessible.'
  },
  {
    name: 'Emma Davis',
    role: 'Community Manager',
    image: 'https://picsum.photos/seed/emma/200',
    bio: 'Building and nurturing our developer community since 2020.'
  }
];

const stats = [
  { number: '1000+', label: 'Articles Published' },
  { number: '50K+', label: 'Monthly Readers' },
  { number: '100+', label: 'Expert Contributors' }
];
---

<Layout title="About Us">
  <div class="container">
    <section class="hero">
      <h1>About BlogSpace</h1>
      <p class="subtitle">Empowering developers through knowledge sharing and community</p>
    </section>

    <section class="mission">
      <h2>Our Mission</h2>
      <div class="mission-content">
        <p>At BlogSpace, we believe in the power of shared knowledge and continuous learning. Our platform serves as a bridge between experienced developers and those beginning their journey in technology.</p>
        <p>We strive to provide high-quality, practical content that helps developers stay current with the latest technologies and best practices.</p>
      </div>
    </section>

    <section class="stats">
      {stats.map(stat => (
        <div class="stat-card">
          <span class="number">{stat.number}</span>
          <span class="label">{stat.label}</span>
        </div>
      ))}
    </section>

    <section class="team">
      <h2>Meet Our Team</h2>
      <div class="team-grid">
        {teamMembers.map(member => (
          <div class="team-member">
            <img src={member.image} alt={member.name} />
            <h3>{member.name}</h3>
            <span class="role">{member.role}</span>
            <p>{member.bio}</p>
          </div>
        ))}
      </div>
    </section>

    <section class="join-us">
      <h2>Join Our Community</h2>
      <p>Want to contribute to BlogSpace? We're always looking for passionate writers and developers to join our community.</p>
      <div class="cta-buttons">
        <a href="/contact" class="btn">Contact Us</a>
        <a href="/blog" class="btn btn-secondary">Read Our Blog</a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
  }

  h1 {
    color: var(--color-primary);
    font-size: 3rem;
    margin: 0 0 1rem;
  }

  .subtitle {
    color: var(--color-gray);
    font-size: 1.25rem;
  }

  section {
    margin-bottom: 4rem;
  }

  h2 {
    color: var(--color-primary);
    text-align: center;
    margin-bottom: 2rem;
  }

  .mission-content {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    line-height: 1.6;
  }

  .stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin: 4rem 0;
  }

  .stat-card {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
  }

  .number {
    display: block;
    font-size: 2.5rem;
    color: var(--color-primary);
    font-weight: bold;
  }

  .label {
    color: var(--color-gray);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .team-member {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
  }

  .team-member img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    margin-bottom: 1rem;
  }

  .team-member h3 {
    color: var(--color-primary);
    margin: 0.5rem 0;
  }

  .role {
    color: var(--color-gray);
    font-size: 0.875rem;
  }

  .join-us {
    text-align: center;
    background-color: white;
    padding: 3rem;
    border-radius: 8px;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }

  .btn-secondary {
    background-color: var(--color-light-gray);
    color: var(--color-text);
  }

  .btn-secondary:hover {
    background-color: var(--color-gray);
    color: white;
  }
</style>