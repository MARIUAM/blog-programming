---
import type { BlogPost } from '../lib/types';

interface Props {
  post: BlogPost;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
---

<article class={`featured-post ${featured ? 'featured' : ''}`}>
  <div class="image-wrapper">
    <img src={post.coverImage} alt={post.title} loading="lazy" />
  </div>
  <div class="content">
    <div class="tags">
      {post.tags.map(tag => <span class="tag">{tag}</span>)}
    </div>
    <h3>{post.title}</h3>
    <p>{post.description}</p>
    <div class="metadata">
      <span class="author">{post.author}</span>
      <span class="date">{post.date}</span>
    </div>
    <a href={post.url} class="read-more">Read Article <span>â†’</span></a>
  </div>
</article>

<style>
  .featured-post {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .featured-post:hover {
    transform: translateY(-4px);
  }

  .featured {
    grid-column: span 2;
    grid-row: span 2;
  }

  .image-wrapper {
    position: relative;
    padding-top: 56.25%;
    overflow: hidden;
  }

  img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .featured-post:hover img {
    transform: scale(1.05);
  }

  .content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-light-gray);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
    color: var(--color-gray);
  }

  h3 {
    color: var(--color-primary);
    margin: 0 0 1rem;
    font-size: 1.25rem;
    line-height: 1.4;
  }

  p {
    color: var(--color-text);
    margin: 0 0 1rem;
    line-height: 1.6;
    flex-grow: 1;
  }

  .metadata {
    display: flex;
    justify-content: space-between;
    color: var(--color-gray);
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .read-more {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: gap 0.3s ease;
  }

  .read-more:hover {
    gap: 0.75rem;
  }
</style>